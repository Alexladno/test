<Window x:Class="Регистрация.testfiltr"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Регистрация"
        mc:Ignorable="d"
        Title="testfiltr" Height="450" Width="800">
    <Grid>
        <CheckBox x:Name="filterCheckBox" Content="Фильтровать по названию группы" Checked="FilterCheckBox_Checked" Unchecked="FilterCheckBox_Unchecked" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="10"/>
        <DataGrid x:Name="dataGrid" Margin="10,40,10,10"/>
    </Grid>
</Window>
